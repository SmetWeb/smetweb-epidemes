<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="30 seconds" debug="false">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <!-- apply stacktrace frame filter, see https://logback.qos.ch/manual/layouts.html#ex -->
            <pattern>%date{HH:mm:ss.SSS} %-5level %X{userId} %message [at %logger{35}\(%file:%line\)]%n%exception{full, org, java, javax}</pattern>
        </encoder>
    </appender>

    <logger name="io.smetweb" level="trace"/>
    <logger name="com.zaxxer.hikari" level="info"/>

    <root level="info">
        <appender-ref ref="console"/>
    </root>
</configuration>
